---
services:
    adguardhome:
      container_name: adguardhome
      image: adguard/adguardhome:edge
      ports:   
        - 53:53/tcp
        - 53:53/udp
        - 784:784/udp
        - 853:853/tcp
        - 3010:3000/tcp
        - 83:80/tcp
      volumes:
        - adguardhome:/opt/adguardhome/
      restart: unless-stopped

volumes:
  adguardhome:
    